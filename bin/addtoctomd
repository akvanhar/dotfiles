#!/usr/bin/env ruby

# Add a table of contents to a markdown file based on the level 1 & 2 headers
# contained within.
# From https://jennifermack.net/2015/04/01/a-table-of-contents-generator-for-ulysses-and-markdownxl/

toc = "# Table of Contents {#top}\n\n"
newmd = ''

ARGF.each_line do |line|
  if line =~ /(^\#{1,2} )/
    heading = line.gsub(/[#]/, '').strip
    sanitized_heading = heading.gsub(/[:;'â€™\.\(\)]/, '').strip
    href = sanitized_heading.tr(' ', '-').downcase

    newmd << line.strip + " {\##{href}}\n"
    newmd << "<a href=\"#top\">Back to top</a>\n"
    toc << '    ' * (line.count('#') - 1) + "* [#{heading}](\##{href})\n"
  else
    newmd << line
  end
end

puts toc + "\n" + newmd
